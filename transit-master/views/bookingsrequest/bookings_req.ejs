<%- include('../partials/header')%>

<body>
    <%- include('../partials/navbar')%>
    <%- include('../partials/sidebar')%>
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold"> Booking Requests </h2>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">User Name</th>
                            <th scope="col">From City</th>
                            <th scope="col">From country_code</th>
                            <th scope="col">To City</th>
                            <th scope="col">TO country_code</th>
                            <th scope="col">Booking Price</th>
                         <th scope="col">Details</th>
                          
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <% data_bookings.forEach((users,i)=>{%>
                            <td>
                                <%= i+1 %>

                            </td>
                                <td>
                                    <%= users.CategoryName%>
                                    
                                </td>
                            
                            <td>
                                <%= users.booking.from_name%>
                            </td>
                          
                            <td>
                                <%= users.booking.from_city%>
                            </td>
                            <td>
                                <%= users.booking.from_country_code%>
                            </td>
                           
                            <td>
                                <%= users.booking.to_city%>
                            </td>
                            <td>
                                <%= users.booking.to_country_code%>
                            </td>
                            <td>
                                <%= users.booking_price%>
                            </td>
                             <td>
                              <a href="/bookings_view/<%=users.id%>"  view class="btn btn-info" class="#">View</a>
                            </td>
                           
                        </tr>
                        <%})%>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>

</html>


<script>
    $(document).ready(function () {
        $('#data-table').DataTable();
    });
</script>