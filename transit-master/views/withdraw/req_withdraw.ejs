<body>
    <%- include('../partials/navbar')%>
    <%- include('../partials/sidebar')%>
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold">Withdraw Request</h2>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">Transporter Name</th>
                            <th scope="col">â‚¬ Amount</th>
                             <th scope="col">Status</th>
                            
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <% fiind_user.forEach((users,i)=>{%>
                            <td>
                                <%= i+1 %>


                            </td>
                            <td>
                                <%= users.TransporterName.name%>
                                
                            </td>
                            <td>
                                <%= users.transporter_amount%>
                                
                            </td>
                            <td>
                                <form action="/withdraw_status" method="POST" >
                                    <input type="hidden" name="id" id="id" value="<%=users.id%>">
                                <select name="status" id="status" onchange="this.form.submit()">
                                    <option value="0"  <%=users.withdraw_status=='0' ? 'selected' : '' %>>Pending</option>
                                    <option value="1"       <%=users.withdraw_status=='1' ? 'selected' : '' %>>Accept</option>
                                    <option value="2" <%=users.withdraw_status=='2' ? 'selected' : '' %>>Reject</option>
                                  </select>
                                </form>
                            </td>
                            

                             

                        </tr>
                        <%})%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>

