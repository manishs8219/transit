<%- include('../partials/header')%>
    <style>
        .chng_password {


            border-radius: 4px;
            padding: 20px 20px;
        }

        .chng_password .form-group {
            margin-left: 0;
            margin-right: 0;
        }
    </style>
    <% if(msg !='' ) { %>
        <div class="alert alert-success msg"
            style="position: absolute; z-index: 9999; color:white; background-color: #195780; right: 10px; top: 10px;">
            <span style="font-size: 16px;">
                <%= msg %>
            </span>
        </div>
        <% } %>
            <body>
                <%- include('../partials/navbar')%>
                    <%- include('../partials/sidebar')%>
                        <div class="content">
                            <div class="panel panel-flat">
                                <div class="panel-body">
                                    <h2 class="text-bold">Change Password</h2>
                                    <form id="basic-form" class="form-horizontal " id="password" action="/update_password"
                                        method="post" enctype="multipart/form-data">
                                        <fieldset class="content-group">

                                            <div class="col-md-6">
                                                <div class="chng_password">
                                                    <div class="form-group">
                                                        <label class="control-label">Old Password<span
                                                                class="text-danger">*</span></label>

                                                        <input type="text" name="oldpassword" class="form-control"
                                                            required="required" placeholder="Enter Current Password"
                                                            aria-required="true">

                                                    </div>

                                                    <div class="form-group">

                                                        <label class="control-label">New Password <span
                                                                class="text-danger">*</span></label>

                                                        <input type="text" name="newpassword" class="form-control"
                                                            required="required" placeholder="Enter the New Password"
                                                            aria-required="true">


                                                    </div>
                                                    <div class="form-group">

                                                        <label class="control-label">Confirm Password <span
                                                                class="text-danger">*</span></label>

                                                        <input type="text" name="confirmpassword" class="form-control"
                                                            required="required" placeholder="Enter a confirm password"
                                                            aria-required="true">


                                                    </div>

                                                    <div class="text-right">

                                                        <button type="submit" class="btn btn-primary">Change Password <i
                                                                class="icon-arrow-right14 position-right"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>


                                </div>
                            </div>

                        </div>
                        <%- include('../partials/footer')%>
            </body>
            </htm>
            <script>
                $(document).ready(function () {
                    console.log('=================tgfhjugfhhgfhgfhgfhjgfftjhgfhnjgf==========');
                    $("#basic-form").validate({
                        rules: {

                            oldpassword: {
                                required: true,

                            },

                            newpassword: {
                                required: true,

                            },
                            confirmpassword: {
                                required: true,
                                equalTo: '[name="newpassword"]'

                            },


                        },
                        messages: {
                            oldpassword: {

                                required: "Enter Old Password"

                            },

                            newpassword: {

                                required: "Please Enter the New Password "

                            },
                            confirmpassword: {

                                required: "Please confirm the  Password "

                            },
                            highlight: function (element) {
                                $(element).parent().addClass('error')
                            },
                        }
                    });
                });
            </script>