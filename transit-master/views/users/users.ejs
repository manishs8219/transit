<%- include('../partials/header')%>

<body>
    <%- include('../partials/navbar')%>
    <%- include('../partials/sidebar')%>
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold">Users</h2>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            
                            <th scope="col">Phone Number</th>
                            <th scope="col">Image</th>
                        
                            <th scope="col">Status</th>
                            <th scope="col"><span>Action</span></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <% fiind_user.forEach((users,i)=>{%>
                            <td>
                                <%= i+1 %>


                            </td>
                            <td>
                                <%= users.name%>
                                
                            </td>
                            <td>
                                <%= users.email%>
                                
                            </td>
                           
                            <td>
                                <%= users.phone%>
                            </td>
                                
                                <td>
                                    <img src="/images/<%= users.image %>" alt="<%= users.image %>" height="80px"
                                        width="80px">
                                </td>
                            
                               <td>
                                <% if(users.type==1) { %>
                                    <button class=" btn-success status btn" data-id="<%=users.id%>"
                                        value="0">Active</button>
                                    <% } else { %>
                                        <button class=" btn-danger status" data-id="<%=users.id%>" value="1"
                                            style="display: flex;
                    ">In-active</button>
                                        <% } %>
                              
                            </td>

                            </td>
                            <td>
                                <a href="/view/<%= users.id%>" view class="btn btn-info" class="#">view</a>
                                <button onclick="confirmDelete('<%=users.id%>','users')" class="btn btn-danger 
                                    deletdata >">delete</button>
                            </td>
                           
                            
                        </tr>
                        <%})%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>

</html>
<script>
        // $(document).ready(() => {
        console.log('====================script==========================');
        $('.status').click(function () {
            // alert('clicked') 
            var id = $(this).attr('data-id')
            var value = $(this).attr('value')
            // alert(id)
            $.ajax({
                type: "post",
                url: "/userstatus",
                data: {

                    id: id,
                    value: value
                },
                success: function (data) {
                    window.location.reload();
                }
            });
        });
    // });
    </script>

<script>
    $(document).ready(function () {
        $('#data-table').DataTable();
    });
</script>