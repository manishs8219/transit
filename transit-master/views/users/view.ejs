<%- include("../partials/header")%>
<style>
    label.form-label {
        margin-top: 6px;
        margin-left: 3px;
    }

    span.badge.bg-primary {
        font-size: 20px;
    }

    span.badge.bg-primary {
        font-size: 20px;
    }

    button.btn.btn-danger.btn-rounded {
        margin-top: 8px;
    }

    img#blah {
        border-radius: 33px;
        margin-left: 133px;
    }

    .sd button.btn.btn-danger.btn-rounded {
        margin-right: 0;
    }

    .user_pr {

        padding: 15px;
    }
</style>

<body>
    <%- include("../partials/navbar")%>
    <%- include("../partials/sidebar")%>





    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold">User View</h2>
                </h1>
                <div class="col-md-6">
                    <div class="user_pr">
                        <form action="" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="control-label " style="display: block;">User Image</label>
                                <a href="/images/<%= view_user.image %>"><img id="blah"
                                        src="/images/<%= view_user.image %>" alt="" width="150" height="150"
                                        aria-disabled=""></a>
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label"> Name</label>
                                <input type="text" value="<%= view_user.name %>" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Phone Number</label>
                                <input type="text" value="<%= view_user.phone %>" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Email</label>
                                <input type="text" value="<%= view_user.email %>" class="form-control" disabled>
                            </div>

                            <div class="form-group">
                                <label for="" class="form-label">Country</label>
                                <input type="text" value="<%= view_user.country %>" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label for="" class="form-label">Date of birth</label>
                                <input type="text" value="<%= view_user.dob%>" class="form-control" disabled>
                            </div>


                            <div class="text-right sd">
                                <button type="button" style="background-color:#ec4747; border-color: #ec4747"
                                    class="btn btn-danger btn-rounded"><a style="color:white;"
                                        href="/users">Back</a></button>
                                <div class="spinner-border  m-0 text-success" role="status">
                                    <span class="sr-only"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>

</body>

</html>