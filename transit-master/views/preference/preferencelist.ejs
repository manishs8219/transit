<%- include('../partials/header')%>

<body>
    <%- include('../partials/navbar')%>
    <%- include('../partials/sidebar')%>
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold">Preference List</h2>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">Category</th>
                            <th scope="col">Preference</th>
                            <th scope="col">Preference Images </th>
                            <th scope="col">Status</th>
                            <th scope="col"><span>Action</span></th>
                           </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <% preferencelist.forEach((preference,i)=>{%>
                            <td>
                                <%= i+1 %>


                            </td>
                            <td>
                                <%= preference.category.categorytype%>

                            </td>
                            <td>
                                <%= preference.preference%>

                            </td>
                            <td>
                                <img src="/images/<%=preference.image%>" alt="<%preference.image%>" height="50px"
                                    width="50px">
                            </td>
                           




                            <td>
                                <% if(preference.status==1) { %>
                                <button class=" btn-success status btn" data-id="<%=preference.id%>"
                                    value="0">Active</button>
                                <% } else { %>
                                <button class=" btn-danger status" data-id="<%=preference.id%>" value="1" style="display: flex;
                                ">In-active</button>
                                <% } %>

                            </td>
                            <td>
                                <a href="/editpreference/<%= preference.id%>" edit class="btn btn-info">Edit</a>
                                <button onclick="confirmDelete('<%=preference.id%>','carrying_preference')" class="btn btn-danger 
                                    deletdata >">Delete</button>
                              
                            </td>


                        </tr>
                        <%})%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>

</html>
<script>
    // $(document).ready(() => {
    console.log('====================script==========================');
    $('.status').click(function () {
        // alert('clicked') 
        var id = $(this).attr('data-id')
        var value = $(this).attr('value')
        // alert(id)
        $.ajax({
            type: "post",
            url: "/preferencestatus",
            data: {

                id: id,
                value: value
            },
            success: function (data) {
                window.location.reload();
            }
        });
    });
    // });
</script>

<script>
    $(document).ready(function () {
        $('#data-table').DataTable();
    });
</script>