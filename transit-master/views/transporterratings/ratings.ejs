<%- include('../partials/header')%>

<body>
    <%- include('../partials/navbar')%>
    <%- include('../partials/sidebar')%>
    <div class="content">
        <div class="panel panel-flat">
            <div class="panel-body">
                <h2 class="text-bold">Ratings of transporter</h2>
                <table id="data-table" class="table">
                    <thead>
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">User</th>
                            <th scope="col">Transporter</th>              
                            <th scope="col">Review </th>
                            <th scope="col">Ratings</th>
                            
                         
                            <th scope="col"><span>Action</span></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <% ratings.forEach((users,i)=>{%>
                            <td>
                                <%= i+1 %>


                            </td>
                            <td>
                                <%= users.user.name%>
                                
                            </td>
                            <td>
                                <%= users.transporterName.name%>
                                
                            </td>
                           
                            <td>
                                <%= users.comment%>
                            </td>
                            <td>
                                <%= users.ratings%>
                            </td>
                                
                            
                            <td>
                                <a href="/view_transporter/<%= users.id %>" view class="btn btn-info" class="#">view</a>
                                <button onclick="confirmDelete('<%=users.id%>','ratings')" class="btn btn-danger 
                                    deletdata >">Delete</button>
                            </td>
                           
                        </tr>
                        <%})%>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>

</html>
